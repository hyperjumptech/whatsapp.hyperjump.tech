// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DATABASE_DIRECT_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../src/generated"
}

/**
 * The table that stores the registration information.
 */
model registrations {
    phoneHash String    @id
    name      String
    token     String    @unique
    expiredAt DateTime
    createdAt DateTime  @default(now())
    updatedAt DateTime?
}

/**
 * The table that stores the user information.
 */
model users {
    phoneHash   String        @id
    name        String
    createdAt   DateTime      @default(now())
    updatedAt   DateTime?
    notify_logs notify_logs[]
}

/**
 * The table that stores the webhook token information.
 */
model webhook_token {
    token     String    @id @default(uuid())
    name      String
    user      String // phoneHash
    createdAt DateTime  @default(now())
    resendAt  DateTime?
}

/**
 * The table that stores the webhook logs received from Facebook.
 */
model webhook_logs {
    id        BigInt   @id @default(autoincrement())
    logs      Json
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}

enum NotifyType {
    start
    terminate
    incident
    recovery
    status_update
}

/**
 * The table that logs the notification request from Monika.
 */
model notify_logs {
    id        BigInt     @id @default(autoincrement())
    userId    String
    user      users      @relation(fields: [userId], references: [phoneHash])
    type      NotifyType
    createdAt DateTime   @default(now())

    @@index([userId])
}
