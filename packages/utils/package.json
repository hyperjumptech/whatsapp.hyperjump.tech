{
  "name": "@workspace/utils",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "exports": {
    "./random-context": {
      "types": "./src/random-context.ts",
      "default": "./dist/random-context.js"
    },
    "./time-context": {
      "types": "./src/time-context.ts",
      "default": "./dist/time-context.js"
    },
    "./multiple-contexts": {
      "types": "./src/multiple-contexts.ts",
      "default": "./dist/multiple-contexts.js"
    },
    "./test-async-rsc": {
      "types": "./src/test-async-rsc.ts",
      "default": "./dist/test-async-rsc.js"
    },
    "./url": {
      "types": "./src/url.ts",
      "default": "./dist/url.js"
    },
    "./phone": {
      "types": "./src/phone.ts",
      "default": "./dist/phone.js"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.0.5"
